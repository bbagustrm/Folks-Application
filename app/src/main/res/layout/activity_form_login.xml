<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/splash2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Folks.id"
        android:textColor="@color/white"
        android:textSize="48dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toTopOf="@+id/formLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/formLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="32dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo, \nSelamat Datang"
            android:textSize="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:layout_marginBottom="28dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:paddingStart="16dp"
            android:paddingVertical="16dp"
            android:background="@drawable/border"
            android:layout_marginBottom="12dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:hint="Kata Sandi"
            android:paddingVertical="16dp"
            android:paddingStart="12dp"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa Sandi?"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins_semibold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="@color/blue400"
            android:fontFamily="@font/poppins_semibold"
            android:paddingVertical="5dp"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:letterSpacing="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun?"
                />

            <Button
                android:id="@+id/registButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textAllCaps="false"
                android:letterSpacing="0"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="36dp">
            <View
                android:layout_width="105dp"
                android:layout_height="2dp"
                android:background="@color/grey" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atau lanjutkan dengan"
                android:textSize="12dp"
                android:paddingHorizontal="6dp"/>
            <View
                android:layout_width="105dp"
                android:layout_height="2dp"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buton_transparent"
            android:gravity="center_horizontal"
            android:paddingVertical="12dp"
            android:layout_marginBottom="12dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_google"
                android:background="@android:color/transparent"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk dengan Google"
                android:textAllCaps="false"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buton_transparent"
            android:gravity="center_horizontal"
            android:paddingVertical="12dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_apple"
                android:background="@android:color/transparent"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk dengan Apple"
                android:textAllCaps="false"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>